#!/bin/bash
 #banner
cat banner.txt;

#Variaveis
export SERVER_URL="https://minecraft.azureedge.net/bin-linux/bedrock-server-1.14.60.5.zip"
export PATH_TO_INSTALL="/var/www"
echo " "

case $1 in
   "-h") cat help.txt ; echo " "
         ;;
   "--ubuntu") bash ubuntu.sh
         ;;
   "--debian") bash debian.sh
         ;;
   *) echo "Opção inválida! utilize a opção -h"
      exit 1
      ;;
esac